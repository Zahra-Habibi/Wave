@model UserViewModel
@{
    ViewData["Title"] = "AddSlider";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="container mt-2">
                <div class="row">
                    <div class="alert alert-light alertstyle mb-3">
                        <i class="fa fa-user fa-success "> Edit user</i>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="mb-1 mt-3 col-10  offset-1 card-box">
                        <form asp-controller="userphoto" asp-action="changefoto" method="post" class="mt-5" enctype="multipart/form-data">
                            <input type="hidden" asp-for="Id" />

                            <div class="ml-3 mb-3 mr-3 ">
                                <label><b>Email</b></label>
                                <input hidden type="text" asp-for="Email" class="form-control " placeholder="Email..." autocomplete="off" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>


                            <div class="form-group my-3 d-flex align-content-center align-items-center flex-column">
                                <input type="hidden" asp-for="usrimag" />
                                <input name="file" type="file" class="form-control mb-3">
                                <span asp-validation-for="usrimag" class="text-danger "></span>
                                <img src="~/@Model.usrimag" alt="@Model.FullName" title="@Model.FullName" class="img-responsive img-thumbnail imgdetail " />

                            <div class="form-group text-right m-b-0 d-flex justify-content-center">
                                <div class="mr-3 mb-3">
                                    <button class="btn btn-success btn-colorsave " type="submit">
                                        Save  <i class="fa fa-plus"></i>
                                    </button>
                                </div>&nbsp;
                                <div class="ml-3 mb-3">
                                    <a asp-action="Index" asp-controller="UserHome" class="btn btn-back btn-primary">
                                        Cancel
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



