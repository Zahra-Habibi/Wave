@model Service
@{
    ViewData["Title"] = "Detials";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="container mt-2">
                <div class="row">
                    <div class="alert alert-info alertstyle mb-3">
                        <i class="fa fa-wrench">  Service Detials</i>
                    </div>
                </div>
            </div>
             <div class="col-10   offset-1">
                 <div class="container ">
                     <div class="divstyle-detail">
                          <div class="row p-5">

                               <p> <strong>Service Name : </strong> @Model.Name</p>
                              <p><strong>Desctiption : </strong> @Model.Descriptions</p>
                              <p> <strong> ServiceImage Title : </strong> @Model.Title</p>
                              <p> <strong> Image Alt : </strong> @Model.Alt</p>
                              <p> <strong>User status : </strong> @Model.IsDelete</p>
                              <p>
                                <strong>About us Image :&nbsp;</strong> 
                                  <img src="~/@Model.ImageUrl" alt="@Model.Alt" title="@Model.Title" class="imgdetail" />
                              </p>
                          </div>
                          <div class="form-group text-right m-b-0 d-flex justify-content-center">
                              <a asp-action="Index" class="btn btn-back mb-3"> Back  </a>
                          </div>
                     </div>
                 </div>
            </div>
         </div>
     </div>
</div>


