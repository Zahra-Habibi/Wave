@model IEnumerable<Message>
@{
    ViewData["Title"] = "Index";
    var counter = 1;
}
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="container mt-4">
                <div class="row">
                    <div class="alert alert-light alertstyle mb-3">
                        <i class="fa fa-message "> message</i>
                    </div>
                </div>
            </div>
            <div class="container">
                        <a class="btn customBlue" asp-controller="Order" asp-action="messagepage">
                             <i class="fa fa-plus"> Add new </i>
                        </a>
                <div class="row">
                 <div class="table-responsive table-style">
                    <table class="table table-bordered table-hover table-striped mt-4   " id="myTable">
                        <thead class="bgcolor   ">
                            <tr class="text-center">
                                <th scope="col" >#</th>
                                <th scope="col">Title</th>
                                <th scope="col">Text</th>
                                <th scope="col">CreateDate</th>
                            </tr>
                        </thead>
                        <tbody>
                             @foreach (var item in Model)
                                {
                                     <tr>
                                         <td class="text-center">@item.Id</td>
                                         <td class="text-center">@item.Title</td>
                                         <td class="text-center">@item.Text</td>
                                         <td class="text-center">@item.CreatMessage.ToString("dddd, dd MMMM yyyy")</td>   
                                     </tr>
                                }
                            </tbody>
                    </table>
                  </div>
                </div>
             </div>

          </div>
     </div>
 </div>


