@model Order
@{
    ViewData["Title"] = "Edit";
}


<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="container mt-4">
                <div class="row">
                    <div class="alert alert-light alertstyle mb-3">
                        <i class="fa fa-pen "> Edit Order</i>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="mb-1 mt-3 col-8  offset-2 card-box">
                          <form asp-action="Edit" method="post" class="mt-3 m-2" enctype="multipart/form-data">

                                <div class="form-group my-3">
                                    <label>UserName</label>
                                    <input asp-for="Name" type="text"  class="form-control" autocomplete="off"> 
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

          
                                <div class="ml-3 mb-3 mr-3">
                                     <label asp-for="LastName" class="control-label">LastName</label>
                                     <input asp-for="LastName" type="text"  class="form-control" autocomplete="off"> 
                                   <span asp-validation-for="LastName" class="text-danger"></span>
                               </div>

                                 <div class="ml-3 mb-3 mr-3">
                                         <label>OrderTime </label>
                                         <input asp-for="OrderTime " type="date" placeholder="" class="form-control" autocomplete="off">
                                         <span asp-validation-for="OrderTime" class="text-danger"></span>
                                 </div>
                                  <div class="ml-3 mb-3 mr-3">
                                         <label>Email </label>
                                         <input asp-for="EmailAddress " type="text" placeholder="" class="form-control" autocomplete="off">
                                         <span asp-validation-for="User" class="text-danger"></span>
                                 </div>

                                  <div class="ml-3 mb-3 mr-3">
                                         <label>Phone </label>
                                         <input asp-for="PhoneNumber " type="text" placeholder="" class="form-control" autocomplete="off">
                                         <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                 </div>
                                 <div class="ml-3 mb-3 mr-3">
                                     <label asp-for="ProductId" class="control-label"> Product Product</label>
                                     <select asp-for="ProductId" class="form-select" asp-items="ViewBag.CategoryId">
                                        <option selected>Select a product</option>
                                    </select>
                                   <span asp-validation-for="ProductId" class="text-danger"></span>
                                 </div>

                           
                                  <div class="ml-3 mb-3 mr-3">
                                         <label>Description </label>
                                         <textarea asp-for="Description " type="text" placeholder="" class="form-control" autocomplete="off"></textarea>
                                         <span asp-validation-for="Description" class="text-danger"></span>
                                 </div>

                              <div class="form-group text-right m-b-0 d-flex justify-content-center">
                                    <button class="btn btn-success  " type="submit"> Save Changes <i class="fa fa-plus"></i> </button>  &nbsp;
                                    <a asp-action="Index" class="btn btn-back">
                                       Cancel
                                    </a>
                              </div>
                        </form>
                    </div>
               </div>
           </div>
       </div>
   </div>
</div>
<script src="~/panel/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace("Description");
</script>

