@model  ApplicationUser
@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="container mt-4">
                <div class="row">
                    <div class="alert alert-light alertstyle mb-3">
                        <i class="fa fa-trash"> Delete Slider</i>
                    </div>
                </div>
            </div>
            <div class="col-6 mt-5  offset-3">
                <div class="card-box pt-5">
                    <h5 class="text-center text-danger">@ViewBag.Message</h5>
                    <form asp-action="Delete" method="post" class="mt-5" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="FullName" />
                        <input type="hidden" asp-for="UserName" />
                        <input type="hidden" asp-for="Email" />
                        <input type="hidden" asp-for="usrimag" />
                        <input type="hidden" asp-for="PasswordHash" />
                        <input type="hidden" asp-for="IsDelete" />
                        <input type="hidden" asp-for="IsActive" />
                        <input type="hidden" asp-for="IsAdmin" />
                        <input type="hidden" asp-for="LockoutEnd" />
                        <input type="hidden" asp-for="LockoutEnabled" /> 
                        <input type="hidden" asp-for="NormalizedEmail" />
                        <input type="hidden" asp-for="ConcurrencyStamp" />
                        <input type="hidden" asp-for="EmailConfirmed" />
                        <input type="hidden" asp-for="PhoneNumber" />
                        <input type="hidden" asp-for="PhoneNumberConfirmed" />
                        <input type="hidden" asp-for="RegisterDate" />
                        <input type="hidden" asp-for="SecurityStamp" />
                        <input type="hidden" asp-for="TwoFactorEnabled" />
                        <input type="hidden" asp-for="NormalizedUserName" />
                        <input type="hidden" asp-for="AccessFailedCount" />

                        <div class="form-group text-right m-b-0 d-flex justify-content-center">
                            <button class="btn btn-primary btn-color-del mb-3 " type="submit">
                                Save change <i class="fa fa-plus"></i>
                            </button>&nbsp;
                            <a asp-action="Index" class="btn btn-back mb-3"> Cancel  </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

