@model About
@{
    ViewData["Title"] = "Detials";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="container mt-2">
                <div class="row">
                    <div class="alert alert-info alertstyle mb-3">
                        <i class="fa fa-user">  About us Detials</i>
                    </div>
                </div>
            </div>
             <div class="col-8   offset-2">
                 <div class="container">
                     <div class="divstyle-detail">
                          <div class="row p-5">
                            <div class="col-6">
                                <p> <strong>Email : </strong> @Model.Email</p>
                                <p> <strong>Phone : </strong> @Model.PhoneNumber</p>
                                <p> <strong>Address : </strong> @Model.Address</p>
                            </div>
                            <div class="col-6">
                                <p> <strong>Title : </strong> @Model.Title</p>
                                <p> <strong>Alt : </strong> @Model.Alt</p>
                                <p> <strong>User status : </strong> @Model.IsDelete</p>
                            </div>
                           
                            <p><strong>Desctiption : </strong>@Html.Raw(Model.Descriptions)</p>
  
                             <p>
                               <strong>About us Image :&nbsp;</strong> 
                               <img src="~/@Model.Image" alt="@Model.Alt" title="@Model.Title" class="imgdetail" />
                             </p>
                          </div>
                          <div class="form-group text-right m-b-0 d-flex justify-content-center">
                              <a asp-action="Index" class="btn btn-back mb-3"> Back  </a>
                          </div>
                     </div>
                 </div>
            </div>
         </div>
     </div>
</div>


