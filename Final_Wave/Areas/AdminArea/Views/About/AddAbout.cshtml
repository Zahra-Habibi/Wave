@model AboutViewModel

@{
    ViewData["Title"] = "Add about information";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="container mt-4">
                <div class="row">
                    <div class="alert alert-light alertstyle mb-3">
                        <i class="fa fa-user "> About us</i>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="mb-1 mt-3 col-10 offset-1 card-box">
                            <form asp-controller="About" asp-action="AddAbout" method="post" class="mt-5" enctype="multipart/form-data" autocomplete="off">   
                             
                                <div class="ml-3 mb-3 mr-3 ">
                                    <label>Title</label>
                                    <input type="text" asp-for="Title" class="form-control " placeholder="About title ..." autocomplete="off" class="form-control" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                               </div>

                                <div class="ml-3 mb-3 mr-3 ">
                                    <label>ImageAlt</label>
                                    <input type="text" asp-for="Alt" class="form-control " placeholder="About title ..." autocomplete="off" class="form-control" />
                                    <span asp-validation-for="Alt" class="text-danger"></span>
                               </div>

                               <div class="ml-3 mb-3 mr-3">
                                    <label>Description</label>
                                    <textarea type="text" asp-for="Descriptions" class="form-control " placeholder="about Description..." autocomplete="off" ></textarea>
                                    <span asp-validation-for="Descriptions" class="text-danger"></span>
                               </div>

                               <div class=" mb-3 my-3 form-group">
                                    <label asp-for="Email" >Email</label>
                                    <input  type="email" parsley-trigger="change" asp-for="Email" class="form-control" autocomplete="off" placeholder="Enter Email.." >
                                    <span  asp-validation-for="Email" class="text-danger"></span>
                               </div>

                               <div class=" mb-3 my-3 form-group">
                                    <label asp-for="PhoneNumber" >PhoneNumber</label>
                                    <input  type="text" parsley-trigger="change" asp-for="PhoneNumber" class="form-control" autocomplete="off" placeholder="PhoneNumber...">
                                    <span  asp-validation-for="PhoneNumber" class="text-danger"></span>
                               </div>

                               <div class=" mb-3 my-3 form-group">
                                    <label asp-for="Address" >Address</label>
                                    <input  type="text" parsley-trigger="change" asp-for="Address" class="form-control"autocomplete="off" placeholder="Address...." >
                                    <span  asp-validation-for="Address" class="text-danger"></span>
                               </div>

                                <div class=" mb-3 my-3 form-group">
                                    <label asp-for="Image" >Image</label>
                                    <input  type="file" name="file"  parsley-trigger="change" class="form-control"  placeholder="Image" >
                                    <span  asp-validation-for="Image" class="text-danger"></span>
                               </div>

                               <div class="form-group text-right m-b-0 d-flex justify-content-center">
                                  <div class="mr-3 mb-3">
                                      <button class="btn btn-success btn-colorsave " type="submit">
                                         Save  <i class="fa fa-plus"></i>
                                      </button>
                                  </div>&nbsp;
                                   <div class="ml-3 mb-3">
                                        <a asp-action="Index" class="btn btn-back btn-primary">
                                         Cancel
                                        </a>
                                   </div>
                                </div>
                            </form>
                    </div>
                </div>
             </div>

        </div>
    </div>
</div>
<script src="~/panel/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace("Descriptions");
</script>

