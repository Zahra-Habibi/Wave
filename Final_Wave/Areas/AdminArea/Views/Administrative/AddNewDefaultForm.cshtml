@model AdministrativeViewModel
@{
    ViewData["Title"] = "Administrative view";
}


<div class="mt-5"></div>

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="container mt-4">
                <div class="row">
                    <div class="alert alert-light alertstyle mb-3">
                        <i class="fa fa-plus "> Default letter </i>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="mb-1 mt-3 col-8  offset-2 card-box">
                            <form asp-controller="Administrative" asp-action="AddNewDefaultForm" method="post" class="mt-5" enctype="multipart/form-data">   
                                <div class="ml-3 mb-3 mr-3 ">
                                    <label><b>Letter_Title: </b></label>
                                    <input asp-for="AdministrativeFormTitle" type="text" placeholder="Product Name " class="form-control" autocomplete="off">
                                    <span asp-validation-for="AdministrativeFormTitle" class="text-danger"></span>
                               </div>

                                  <div class="ml-3 mb-3 mr-3">
                                       <label>Letter_Content: </label>
                                       <input asp-for="AdministrativeFormContent" type="text" placeholder="administrative content " class="form-control" autocomplete="off">
                                      <span asp-validation-for="AdministrativeFormContent" class="text-danger"></span>
                                 </div>

               
                               <div class="form-group text-right m-b-0 d-flex justify-content-center">
                                  <div class="mr-3 mb-3">
                                      <button class="btn btn-success btn-colorsave " type="submit">
                                         Save  <i class="fa fa-plus"></i>
                                      </button>
                                  </div>&nbsp;
                                   <div class="ml-3 mb-3">
                                        <a asp-action="ShowProduct" class="btn btn-back btn-primary">
                                         Cancel
                                        </a>
                                   </div>
                                </div>
                            </form>
                      </div>
                </div>

        </div>
    </div>
  </div>
</div>
<script src="~/panel/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace("AdministrativeFormContent");
</script>



