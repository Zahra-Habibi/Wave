@model TeamViewModel

@{
    ViewData["Title"] = "Add Team member information";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="container mt-4">
                <div class="row">
                    <div class="alert alert-light alertstyle mb-3">
                        <i class="fa fa-users ">Our Team</i>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="mb-1 mt-3 col-10 offset-1 card-box">
                            <form asp-controller="Team" asp-action="AddTeam" method="post" class="mt-5" enctype="multipart/form-data" autocomplete="off">   
                             
                                <div class="ml-3 mb-3 mr-3 ">
                                    <label><b>First_Name</b></label>
                                    <input type="text" asp-for="Name" class="form-control " placeholder="Team member name ..." autocomplete="off" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                               </div>
                               <div class="ml-3 mb-3 mr-3 ">
                                    <label><b>LastName</b></label>
                                    <input type="text" asp-for="LastName" class="form-control " placeholder="Team member lastname ..." autocomplete="off" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                               </div>

                                <div class="ml-3 mb-3 mr-3 ">
                                    <label><b>TeamPositon</b></label>
                                    <input type="text" asp-for="PositionName" class="form-control " placeholder="Member  position ..." autocomplete="off" class="form-control" />
                                    <span asp-validation-for="PositionName" class="text-danger"></span>
                               </div>

                                <div class="ml-3 mb-3 mr-3">
                                    <label asp-for="ShortDesc"><b>ShortDesription</b></label>
                                    <textarea type="text" asp-for="ShortDesc" class="form-control " placeholder="Enter a shortdescription..." autocomplete="off"  ></textarea>
                                    <span asp-validation-for="ShortDesc" class="text-danger"></span>
                               </div>

                               <div class=" mb-3 my-3 form-group">
                                    <label asp-for="ImageUrl" >Image</label>
                                    <input  type="file" name="file"  parsley-trigger="change" class="form-control"  placeholder="Image" >
                                    <span  asp-validation-for="ImageUrl" class="text-danger"></span>
                               </div>

                               <div class="ml-3 mb-3 mr-3">
                                    <label><b>Img_title</b></label>
                                    <input type="text" asp-for="Title" class="form-control " placeholder= image title..." autocomplete="off" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                               </div>

                               <div class=" mb-3 my-3 form-group">
                                    <label asp-for="Alt" ><b>Image_Alt</b></label>
                                    <input  type="text" parsley-trigger="change" asp-for="Alt" class="form-control" autocomplete="off" placeholder=" image alt.." >
                                    <span  asp-validation-for="Alt" class="text-danger"></span>
                               </div>


                               <div class="form-group text-right m-b-0 d-flex justify-content-center">
                                  <div class="mr-3 mb-3">
                                      <button class="btn btn-success btn-colorsave " type="submit"> Save  <i class="fa fa-plus"></i> </button>
                                  </div>&nbsp;
                                  <div class="ml-3 mb-3"> <a asp-action="Index" class="btn btn-back btn-primary"> Cancel</a> </div>
                               </div>
                            </form>
                      </div>
                  </div>
             </div>
        </div>
    </div>
</div>
<script src="~/panel/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace("Descriptions");
</script>

