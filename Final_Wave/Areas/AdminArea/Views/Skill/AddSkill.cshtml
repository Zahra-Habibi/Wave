@model SkillsViewModel
@{
    ViewData["Title"] = "Add skills";
}


<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="container mt-4">
                <div class="row">
                    <div class="alert alert-light alertstyle mb-3">
                        <i class="fa fa-plus ">  Skill for  <span>@ViewBag.parentname</span> </i>
                    </div>
                </div>
            </div>
     <div class="container">
                <div class="row">
                    <div class="mb-1 mt-3 col-8  offset-2 card-box">
                            <form asp-controller="Skill" asp-action="AddSkill" method="post" class="mt-5" enctype="multipart/form-data">   
                                <div class="ml-3 mb-3 mr-3 ">
                                    <label><b>Skill_Name</b></label>
                                    <input asp-for="SkillName" type="text" placeholder="Skill Name " class="form-control" autocomplete="off">
                                    <span asp-validation-for="SkillName" class="text-danger"></span>
                               </div>

                                <input asp-for="level" value="@ViewBag.id" hidden />
                                 
                              <div class="ml-3 mb-3 mr-3">
                                   <label><b>Skill_Description</b></label>
                                   <textarea asp-for="Description" placeholder="Short Description " class="form-control"></textarea>
                                   <span asp-validation-for="Description" class="text-danger"></span>
                              </div>

               
                               <div class="form-group text-right m-b-0 d-flex justify-content-center">
                                  <div class="mr-3 mb-3">
                                      <button class="btn btn-success btn-colorsave " type="submit">
                                         Save  <i class="fa fa-plus"></i>
                                      </button>
                                  </div>&nbsp;
                                   <div class="ml-3 mb-3">
                                        <a asp-action="AddSkill" class="btn btn-back btn-primary">
                                         Cancel
                                        </a>
                                   </div>
                                </div>
                            </form>
                      </div>
                </div>

        </div>
        </div>
    </div>
 </div>

