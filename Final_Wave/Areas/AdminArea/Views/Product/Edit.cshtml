@model Product
@{
    ViewData["Title"] = "Edit";
}


<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="container mt-4">
                <div class="row">
                    <div class="alert alert-light alertstyle mb-3">
                        <i class="fa fa-pen "> Edit Product</i>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="mb-1 mt-3 col-8  offset-2 card-box">
                          <form asp-action="Edit" method="post" class="mt-3 m-2" enctype="multipart/form-data">

                                <div class="form-group my-3">
                                    <label>produt Name</label>
                                    <input asp-for="ProductName" type="text"  class="form-control" autocomplete="off"> 
                                    <span asp-validation-for="ProductName" class="text-danger"></span>
                                </div>

          
                                <div class="ml-3 mb-3 mr-3">
                                     <label asp-for="CategoryId" class="control-label"> Product Category</label>
                                     <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId" >
                                        <option selected>Select a Category</option>
                                     </select>
                                   <span asp-validation-for="CategoryId" class="text-danger"></span>
                               </div>


                                  <div class="form-group my-3 d-flex align-content-center align-items-center flex-column">
                                        <input type="hidden" asp-for="ProductImage" />
                                        <input name="file" type="file"  class="form-control mb-3">
                                        <span asp-validation-for="ProductImage" class="text-danger "></span>
                                        <img src="~/@Model.ProductImage" alt="@Model.Alt" title="@Model.Title" class="img-responsive img-thumbnail imgdetail "/>
                                  </div>

                                  <div class="ml-3 mb-3 mr-3">
                                         <label>Alt</label>
                                         <input asp-for="Alt" type="text" placeholder="alt" class="form-control" autocomplete="off">
                                         <span asp-validation-for="Alt" class="text-danger"></span>
                                 </div>

                                   <div class="ml-3 mb-3 mr-3">
                                         <label>Title</label>
                                         <input asp-for="Title" type="text" placeholder="title" class="form-control" autocomplete="off">
                                         <span asp-validation-for="Title" class="text-danger"></span>
                                 </div>

                                  <div class="ml-3 mb-3 mr-3">
                                         <label>Count</label>
                                         <input asp-for="count" type="text" placeholder="Count" class="form-control" autocomplete="off">
                                         <span asp-validation-for="count" class="text-danger"></span>
                                 </div>

                                 <div class="ml-3 mb-3 mr-3">
                                 <div class="checkbox">
                                   <input asp-for="IsActive" class="check-box" id="remember-1" type="checkbox" class="mr-4">
                                    <label asp-for="IsActive" for="remember-1"> Keep Active </label>
                                 </div>
                                 </div>

 

                              <div class="ml-3 mb-3 mr-3">
                                    <label> Short Descriptioin</label>
                                    <textarea asp-for="ShortDescription" placeholder="Enter the Short Description " rows="5" class="form-control"></textarea>
                                    <span asp-validation-for="ShortDescription" class="text-danger"></span>
                              </div>

                              <div class="form-group text-right m-b-0 d-flex justify-content-center">
                                    <button class="btn btn-success  " type="submit"> Save Changes <i class="fa fa-plus"></i> </button>  &nbsp;
                                    <a asp-action="ShowProduct" class="btn btn-back">
                                       Cancel
                                    </a>
                              </div>

                        </form>
                    </div>
               </div>
           </div>
       </div>
   </div>
</div>

<script src="~/panel/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace("ShortDescription");
</script>