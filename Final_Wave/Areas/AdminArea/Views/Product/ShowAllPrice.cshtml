@model IEnumerable<ProductPriceViewModel>

@{
    ViewData["Title"] = "ShowAllPrice";
}


<div class="col-sm-12">
    <div class="panel">
        <div class="panel-body" style="margin-top:5%;">


            <div class="editable-responsive">
                <div id="datatable-editable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">

                    <div class="row">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="m-b-30 mb-3">
                                    <a   href="/AdminArea/Product/AddPrice/@ViewBag.id" id="addToTable" class="btn btn-primary waves-effect waves-light">افزودن <i class="fa fa-plus"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">

                            @if (TempData["Result"] != null)
                            {
                                if (TempData["Result"].ToString() == "true")
                                {
                                    <div class="alert alert-success alert-dismissable">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                        Succellfully added!
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-danger alert-dismissable">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                        Oops! somthing wrong!
                                    </div>
                                }
                            }

                            @if (TempData["NotFoundSlider"] != null)
                            {
                                <script>

                                    setTimeout(function () {
                                        Swal.fire({
                                            position: 'top-end',
                                            icon: 'error',
                                            title: 'soryy! Not fount .',
                                            showConfirmButton: false,
                                            timer: 3000
                                        })
                                    }, 50)

                                </script>
                            }
                            <div class="table-responsive table-style">
                                <table class="table table-bordered table-hover table-striped mt-4   " id="datatable-editable"  >
                                    <thead class="bgcolor   ">
                                        <tr role="row">
                                            <th scope="col">#</th>
                                            <th scope="col">MainPrice</th>
                                            <th scope="col">SpecialPrice</th>
                                            <th scope="col">Count</th>
                                            <th scope="col">MaxOrderCount</th>
                                            <th scope="col">Created</th>
                                            <th scope="col">EndDateDiscount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Count() > 0)
                                        {
                                            @foreach (var item in Model)
                                            {
                                                <tr class="gradeX odd" role="row">
                                                    <td class="text-center">@item.ProductPriceId</td>
                                                    <td class="text-center">@item.MainPrice</td>
                                                    <td class="text-center">@item.SpecialPrice</td>
                                                    <td class="text-center">@item.count</td>
                                                    <td class="text-center">@item.MaxOrderCount</td>
                                                    <td class="text-center">@item.CreatDate.ToString("dddd, dd MMMM yyyy")</td>
                                                    <td class="text-center">@item.EndDateDiscount.ToString("dddd, dd MMMM yyyy")</td>

                                               
                                                </tr>

                                            }
                                        }
                                        else
                                        {
                                            <tr class="gradeX odd" role="row">
                                                <td colspan="5" class="sorting_1">No price exist.</td>

                                            </tr>
                                        }


                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="dataTables_info" id="datatable-editable_info" role="status" aria-live="polite">Showing 1 to 10 of 80 entries</div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- end: panel body -->

    </div> <!-- end panel -->
</div> <!-- end col-->
@section AdminScripts{
    <script src="~/panel/assets/js/sweetalert.js"></script>
}


