@model Product
@{
    ViewData["Title"] = "Delete";
}
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="container mt-4">
                <div class="row">
                    <div class="alert alert-info alertstyle mb-3">
                        <i class="fa fa-trash"> Delete Product</i>
                    </div>
                </div>
            </div>           
           <div class="col-6 mt-5  offset-3">
               <div class="card-box pt-5">
                  <h5 class="text-center text-danger">@ViewBag.Message</h5>
                  <form asp-action="Delete" method="post" class="mt-5" enctype="multipart/form-data">
                       <input type="number" hidden asp-for="Id" />
                       <input type="hidden" asp-for="ProductImage" />
                       <input type="text" asp-for="ProductName" hidden />
                       <input type="text" asp-for="ShortDescription" hidden />
                        <input type="text" asp-for="FullDescription" hidden />
                       <input type="text" asp-for="IsActive" hidden />
                       <input type="text" asp-for="CategoryId" hidden />
                       <input type="hidden" asp-for="IsDelete" />
                       <input type="hidden" asp-for="Alt" />
                       <input type="hidden" asp-for="Title" />
                        <input type="hidden" asp-for="IsOrginal" />
                        <input type="hidden" asp-for="MainPrice" />
                         <input type="hidden" asp-for="SpecialPrice" />
                        <input type="hidden" asp-for="count" />
                      <div class="form-group text-right m-b-0 d-flex justify-content-center">
                          <button class="btn btn-primary btn-color-del mb-3 " type="submit">
                                 Save change <i class="fa fa-plus"></i>
                          </button>&nbsp;
                          <a asp-action="ShowProduct" class="btn btn-back mb-3">
                                 Cancel
                          </a>
                      </div>
                  </form>
               </div>
            </div>
       </div>
    </div>
 </div>