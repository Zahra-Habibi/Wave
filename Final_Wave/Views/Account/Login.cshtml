@model Final_Wave.Core.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Account.cshtml";
}

 <div class="login-page">
        <div class="container custome-signUp">
            <div class="row">
                <div class=" col-md-1"></div>
                    <div class="col col-sm-5 col-md-5">
                       <div class="image-illustrator">
                            <img src="~/assets/images/signUp.png" class="img-responsive mx-auto d-block sign-up-illustrator">
                       </div>
                    </div>

                <div class="col col-sm-5 col-md-4">
                      <h3 class="mt-5 custom-title-signup">Login to wave site</h3>
                      <a asp-action="Register" asp-controller="Account" class="hv-account">Don't have an account</a>
                          <form asp-action="Login" asp-controller="Account" method="post"  class="mt-3" enctype="multipart/form-data">
                             
                              <div class="form-group">
                                  <label asp-for="UserName">Username:</label>
                                  <input asp-for="UserName"  type="text" class="form-control" placeholder="Enter UserName" >
                                  <span asp-validation-for="UserName" class="text-danger"></span>
                              </div>

                              <div class="form-group">
                                 <label asp-for="Password">Password:</label>
                                 <input asp-for="Password" type="password" class="form-control" placeholder="Password" >
                                 <span asp-validation-for="Password" class="text-danger"></span>
                              </div>

                              <button type="submit" class="btn form-control custome-signUp-btn">Log in</button>
                          </form>
                 </div>
                <div class="col-sm-1 col-md-1"></div>
            </div>
        </div>
    </div>