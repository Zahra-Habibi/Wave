@model IEnumerable<Final_Wave.DataLayer.Entites.Slider>

@{
    bool active = true;
}

            <div id="demo" class="carousel slide custome-carousel" data-ride="carousel">
                <ul class="carousel-indicators">
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        if (i == 0)
                        {
                            <li data-target="demo" data-slide-to="@i" class="active"></li>
                        }
                        else
                        {
                            <li data-target="demo" data-slide-to="@i"></li>
                        }
                    }
                </ul>

                <div class="carousel-inner">
                    @foreach (var item in Model)
                    {
                        if (active)
                        {
                            <div class="carousel-item active">
                                <img src="~/@item.sliderImage" alt="@item.Alt" title="@item.Title"  asp-append-version="true">
                                <div class="carousel-caption">
                                    <h3>@item.silderName</h3>
                                    <p>@item.Caption</p>
                                </div>
                            </div>

                            active = false;
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img src="~/@item.sliderImage" alt="@item.Alt" title="@item.Title"  asp-append-version="true">
                                <div class="carousel-caption">
                                    <h3>@item.silderName</h3>
                                    <p>@item.Caption</p>
                                </div>
                            </div>
                        }
                    }
                </div>

                <a class="carousel-control-prev" href="#demo" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#demo" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>

            </div>
