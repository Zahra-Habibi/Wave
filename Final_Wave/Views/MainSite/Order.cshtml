@model Final_Wave.Core.ViewModels.OrderViewModel
@{
    ViewData["Title"] = "Wave software service";
    ViewData["Description"] = "This site is a new site , It provide diffirent software (desktop application , mobile application web application, video and image editing,banner , prototype.).";
    Layout = "_SiteLayout";
}
<br>
<br>
<br>
<br>
<br>
<br>
<div class="container custome-bubles">
    <div class="row">
        <div class="col-sm-1 col-md-1"></div>
        <div class="col-sm-10 col-md-10">
            <div class="container custome-order-form">
                <div class="row ">
                    <div class="col-md-4"></div>
                    <div class="col-md-4 pl-5">
                        <h3 class="text-center mt-5 custome-order-title ">Ordering</h3>
                    </div>
                    <div class="col-md-4"></div>
                </div>
                <div class="row mt-4">
                    <!-- start of form tag -->
                    <form class="col-md-12" method="post" asp-action="Order" asp-antiforgery="true">
                        <div class="row">
                            <div class="col">
                                <input type="text" class="form-control" placeholder="Your name" name="name" required asp-for="Name">
                            </div>
                            <div class="col">
                                
                                <select asp-for="ProductId" class="form-select form-control" asp-items="ViewBag.ProductId">
                                    <option selected>Select a product</option>
                                </select>
                                <span asp-validation-for="ProductId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                <input type="text" class="form-control" placeholder="Your Last name" asp-for="LastName" name="last-name" required><br>
                                <input type="email" class="form-control" placeholder="Your Email address" asp-for="EmailAddress" name="email" required><br>
                                <input type="text" class="form-control" placeholder="Your Phone number" asp-for="PhoneNumber" name="Phone" required>
                            </div>
                            <div class="col">
                                <textarea class="form-control" rows="6" name="message" placeholder="Discription" asp-for="Description"></textarea>
                            </div>
                        </div>
                        <input type="submit" value="Send" class="mx-auto d-block btn-send-order mt-3">
                    </form>
                    <!-- end of form tag -->
                </div>
            </div>
        </div>
        <div class="col-sm-1 col-md-1"></div>
    </div>
</div>
<!-- end of order form -->