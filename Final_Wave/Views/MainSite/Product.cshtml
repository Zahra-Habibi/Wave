@model IEnumerable<Final_Wave.DataLayer.Entites.Product>
@{
    ViewData["Title"] = "Wave software service";
    ViewData["Description"] = "This site is a new site , It provide diffirent software (desktop application , mobile application web application, video and image editing,banner , prototype.).";
    Layout = "_SiteLayout";
}
        <br><br><br><br>

        <!-- start of search  -->
        <div class="container">
            <div class="row">
                <div class="col-sm-2 col-md-2"></div>
                <div class="col-sm-8 col-md-8 custome-search">
                    <form class="" action="">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="Search...">
                            <div class="input-group-append">
                                <button class="btn custome-search-btn" type="submit">Search</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-sm-2 col-md-2"></div>
            </div>
        </div>
        <!-- end of search -->
        <!-- Start of products card -->
        <div class="container mt-5 custome-bubles">
            <!-- end of bubles -->
            <div class="row">
                <div class="col-sm-4 col-md-4"></div>
                <div class="col-sm-4 col-md-4">
                    <h3 class="text-center title-our-product">Our Products</h3>
                </div>
                <div class="col-sm-4 col-md-4"></div>
            </div>
            <div class="container mt-3">
                <div class="row mt-3">
                    @foreach(var item in Model)
                    {
                if (!item.IsDelete)
                {
                    <div class="col-sm-6 col-md-3 mt-2 ">
                        <div class="card silimar-product-item">
                           <img src="~/@item.ProductImage" alt="@item.Alt" title="@item.Title" class="   product-img img-responsive" asp-append-version="true">
                           <div class="card-body text-center">
                              <h5 class="custome-service-title ">@item.ProductName</h5>
                              <p class="card-text"> @Html.Raw(item.ShortDescription)</p>
                              <a href="#" class="card-link service-detail-btn form-control text-center">product Detail</a>
                           </div>
                         </div>
                     </div>
                } 
                    }
                </div>

            </div>
        </div>
        <!-- End of products card -->

        <br>
