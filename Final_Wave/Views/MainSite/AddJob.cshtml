@model Final_Wave.Core.ViewModels.JobViewModel
@{
    ViewData["Title"] = "Wave software service";
    ViewData["Description"] = "This site is a new site , It provide diffirent software (desktop application , mobile application web application, video and image editing,banner , prototype.).";
    Layout = "_SiteLayout";
}
<br><br><br>
<!-- start of job form -->
<div class="container custome-bubles">
    <div class="row">
        <div class="col-sm-1 col-md-1"></div>
        <div class="col-sm-10 col-md-10">
            <div class="container custome-order-form">
                <div class="row ">
                    <div class="col-md-4"></div>
                    <div class="col-md-4 pl-5">
                        <h3 class="text-center mt-5 custome-order-title ">Job Finding</h3>
                    </div>
                    <div class="col-md-4"></div>
                </div>
                <div class="row mt-4">
                    <!-- start of form tag -->
                    <form class="col-md-12" asp-controller="MainSite" asp-action="AddJob" asp-antiforgery="true" enctype="multipart/form-data">  
                        <div class="row">
                            <div class="col">
                                
                            </div>

                          
                        </div>

                        <div class="row mt-3">
                            <div class="col">
                                <input type="text" asp-for="Name" class="form-control" placeholder="Your name" autocomplete="off"><br />
                                <span asp-validation-for="Name" class="text-danger"></span> 

                                <input type="text" asp-for="LastName" class="form-control" placeholder="Your Last name"  autocomplete="off"><br>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                               
                                <input type="email" asp-for="EmailAddress" class="form-control" placeholder="Your Email address" autocomplete="off" ><br>
                                <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                
                                <input type="text" asp-for="PhoneNumber" class="form-control" placeholder="Your Phone number" autocomplete="off" ><br />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    
                                    <input asp-for="JobName" type="text" placeholder="JobName" class="form-control" autocomplete="off">
                                    <span asp-validation-for="JobName" class="text-danger"></span>

                            </div>
                            <div class="col">
                                <textarea type="text" rows="6" asp-for="Description" class="form-control " placeholder="Job Description..." autocomplete="off"></textarea><br />
                                <span asp-validation-for="Description" class="text-danger"></span>

                                <label asp-for="Resume"><strong>Resume</strong></label>
                                <input type="file" name="file" parsley-trigger="change" class="form-control" placeholder="Image">
                                <span asp-validation-for="Resume" class="text-danger"></span>
                            </div>
                        </div>

                        <input type="submit" value="Send" class="mx-auto d-block btn-send-order mt-3">
                    </form>
                    <!-- end of form tag -->
                </div>
            </div>
        </div>
        <div class="col-sm-1 col-md-1"></div>
    </div>
</div>


<!-- end of job form -->

