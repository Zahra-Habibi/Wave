@model Final_Wave.Core.ViewModels.JobViewModel
@{
    ViewData["Title"] = "Wave software service";
    ViewData["Description"] = "This site is a new site , It provide diffirent software (desktop application , mobile application web application, video and image editing,banner , prototype.).";
    Layout = "_SiteLayout";
}
<br><br><br>
<!-- start of job form -->
<div class="container custome-bubles">
    <div class="row">
        <div class="col-sm-1 col-md-1"></div>
        <div class="col-sm-10 col-md-10">
            <div class="container custome-order-form">
                <div class="row ">
                    <div class="col-md-4"></div>
                    <div class="col-md-4 pl-5">
                        <h3 class="text-center mt-5 custome-order-title ">Job Finding</h3>
                    </div>
                    <div class="col-md-4"></div>
                </div>
                <div class="row mt-4">
                    <!-- start of form tag -->
                    <form class="col-md-12">
                        <div class="row">
                            <div class="col">
                                <input type="text" class="form-control" placeholder="Your name" name="name" required>
                            </div>
                            <div class="col">
                                <select name="category" class="form-control" required>
                                    <option value="category">Choose skill</option>
                                    <option value="web design">Web design</option>
                                    <option value="web application">Web application</option>
                                    <option value="Mobile application">Mobile application</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                <input type="text" class="form-control" placeholder="Your Last name" name="last-name" required><br>
                                <input type="email" class="form-control" placeholder="Your Email address" name="email" required><br>
                                <input type="number" class="form-control" placeholder="Your Phone number" name="Phone" required>
                            </div>
                            <div class="col">
                                <textarea class="form-control" rows="6" name="message" placeholder="Discription"></textarea>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                Photo: <input type="file"
                                              id="avatar" name="avatar"
                                              accept="image/jpeg">
                            </div>
                            <div class="col">
                                Resume: <input type="file" name="file" id="file">
                            </div>
                        </div>
                        <input type="submit" value="Send" class="mx-auto d-block btn-send-order mt-3">
                    </form>
                    <!-- end of form tag -->
                </div>
            </div>
        </div>
        <div class="col-sm-1 col-md-1"></div>
    </div>
</div>


<!-- end of job form -->

