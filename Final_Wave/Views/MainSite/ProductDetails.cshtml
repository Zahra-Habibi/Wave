@model Final_Wave.DataLayer.Entites.Product
@{
    ViewData["Title"] = "Wave software service";
    ViewData["Description"] = "This site is a new site , It provide diffirent software (desktop application , mobile application web application, video and image editing,banner , prototype.).";
    Layout = "_SiteLayout";
}
        <br><br><br>
        <!-- Start of product detail -->
        <div class="container-fluid product-custome mt-4 custome-bubles">
            <div class="row">
                <div class="col-sm-6 col-md-6 ml-1">
                    <img src="~/@Model.ProductImage" class="img-responsive img-product-detail mt-4">
                </div>
                <div class="col-sm-6 col-md-5">
                    <h4 class="mt-5 ml-3 product-title"><span class="product-name">@Model.ProductName </span> @Model.Title</h4>
                    <p class="mt-2 ml-3">@Html.Raw(Model.ShortDescription)</p>
                    <p class="mt-2 ml-3">@Html.Raw(Model.FullDescription)</p>
                    <p>
                    @* <h6 class="text-left "> Price:&nbsp;<s class="text-danger">@Model.MainPrice</s> <i>@Model.SpecialPrice</i> </h6>*@
                    </p>
                   
                    <a href="#" class="want-product ml-3">Want This Product</a>
                   

                </div>
            </div>
            <br><br>
    <div class="row">

        @(await Component.InvokeAsync("GalleyComponent", Model.Id))

    </div>
        </div>

        <!-- End of product detail -->

        <!-- Start of similer products -->
        <div class="container mt-5 mb-5">
            <div class="row">
                <div class="col-sm-4 col-md-4">
            <h3 class="silimar-product "><span class="product-name">Explore Similar</span> Products</h3>
                </div>
                <div class="col-sm-4 col-md-4"></div>
                <div class="col-sm-4 col-md-4"></div>
            </div>

            <div class="row">

           @(await Component.InvokeAsync("RelatedProductComponent",Model.CategoryId))

            </div>

        </div>
        <!-- end of similer products -->
