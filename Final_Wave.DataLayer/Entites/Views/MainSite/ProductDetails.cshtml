@model Final_Wave.DataLayer.Entites.Product
@{
    ViewData["Title"] = "Wave software service";
    ViewData["Description"] = "This site is a new site , It provide diffirent software (desktop application , mobile application web application, video and image editing,banner , prototype.).";
    Layout = "_SiteLayout";
}
<!-- Start of product detail -->
<div class="container-fluid product-custome mt-4 custome-bubles">
    <div class="row">
        <div class="col-sm-6 col-md-7 ml-5">
            @await Component.InvokeAsync("ProductGalleryComponent",Model.Id)
        </div>
        <div class="col-sm-6 col-md-4">
            <h4 class="mt-5 ml-3 product-title"><span class="product-name"> @Model.Title</span></h4>
            <p class="mt-2 ml-3">@Model.ShortDescription</p>
            <a href="#" class="want-product ml-3">Want This Product</a>
        </div>
    </div>
    <br><br><br>
</div>
<!-- End of product detail -->
<!-- Start of similer products -->
<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-sm-4 col-md-4">
            <h3 class="silimar-product">Explore Similar Products</h3>
        </div>
        <div class="col-sm-4 col-md-4"></div>
        <div class="col-sm-4 col-md-4"></div>
    </div>

    <div class="row">
        <div class="row mt-3">
            @await Component.InvokeAsync("RelatedProduct", @Model.CategoryId)
          
            <div class="col-sm-6 col-md-3 mt-2 ">
                <div class="card silimar-product-item">
                    <img src="assets/images/pp3.jpg" class="silimar-product-img img-responsive">
                    <div class="card-body text-center">Alemi hospital MIS</div>
                    <a href="product-detail.html" class="card-link product-want-btn form-control">See Detail</a>
                </div>
            </div>
            <div class="col-sm-6 col-md-3 mt-2 ">
                <div class="card silimar-product-item">
                    <img src="assets/images/pp4.jpg" class="silimar-product-img img-responsive">
                    <div class="card-body text-center">Gussing Kids game</div>
                    <a href="product-detail.html" class="card-link product-want-btn form-control">See Detail</a>
                </div>
            </div>
        </div>

    </div>

</div>
<!-- end of similer products -->